        "/api/auth/google": { "method": "POST", "access": "public" },
        "/api/auth/profile": { "method": "GET", "access": "protected" },
        "/api/auth/logout": { "method": "POST", "access": "protected" }
      }
    },
    "dashboard": {
      "endpoints": {
        "/api/dashboard/classes": { "method": "GET", "access": "protected" },
        "/api/dashboard/notifications": { "method": "GET", "access": "protected" },
        "/api/notifications/send": { "method": "POST", "access": "protected" }
      }
    },
    "seatPlan": {
      "endpoints": {
        "/api/seats/:classId": {
