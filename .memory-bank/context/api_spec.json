        "/api/analytics/:classId/export": { "method": "GET", "access": "teacher" }
      }
    },
    "qrCode": {
      "endpoints": {
        "/api/qrcode/:classId": {
          "POST": { "access": "teacher" },
          "GET": { "access": "protected" }
        },
        "/api/attendance/scan": { "method": "POST", "access": "student" }
      }
    }
  }
